### openssl rand -out random.bin 1000000                                                                  # GENERATE PSEUDO-RANDOM
### openssl genrsa -out ca/private/ca.key -aes256 -rand random.bin 4096                                   # GENERATE KEY
### openssl req -new -x509 -days 3652 -key ca/private/ca.key -out ca/ca.crt -config etc/ca.conf           # SELFSIGN CERTIFICATE (ROOT CA)
openssl req -new -config etc/ca.conf -out ca/ca.csr -keyout ca/private/ca.key                             # GENERATE KEY and SIGN REQUEST
openssl ca -selfsign -config etc/ca.conf -in ca/ca.csr -out ca/ca.crt -extensions ca_ext                  # ISSUE (SELF)CERTIFICATE
# cat > reqs/server.csr                                                                                   # SAVE SERVER REQUEST
# openssl ca -config etc/ca.conf -in reqs/server.csr -out certs/server.crt -extensions server_ext         # ISSUE SERVER CERT
